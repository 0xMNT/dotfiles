ns() {
  # Use fzf to select a namespace interactively, with 'default' as fallback
  local ns
  if [[ -z "$1" ]]; then
    ns=$(kubectl get ns | awk '{print $1}' | tail -n +2 | fzf --height 20 --border --prompt="Select a namespace: ") 
    ns=${ns:-default}  # If no namespace selected, default to 'default'
  else
    ns=$1  # If a namespace is provided as an argument, use it
  fi
  
  kubectl config set-context --current --namespace="$ns"
}
