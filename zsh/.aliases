# perl gnu stow
export LANGUAGE=en_US.UTF-8
export LC_ALL=en_US.UTF-8

alias ans="cd ~/repos/k8s-ansible/"

alias vim="nvim"

alias py="python3"

alias ls="eza --group-directories-first --icons=always $@"
alias l="ls -lah"
alias lt="ls -Ta"
alias tree="ls -Ta"

alias s="systemctl"
alias sd="shutdown now"

alias k="kubectl"
alias m="minikube"

alias tks="tmux kill-server"

alias lg="lazygit"
alias ld="lazydocker"

alias ff="fastfetch"
alias suu="sudo pacman -Syu -y"

alias repos="gh repo clone \$(gh repo list 0xmnt | awk '{print \$1}' | fzf)"

alias ip="ip -c -br"

alias ns="kubens"

alias kc="kccon \$(kccon | tr '*' ' ' | egrep -v 'NAME' | awk '{print \$1}' | fzf)"

alias k9s="k9s --kubeconfig /etc/k8s/config -c ctx"

alias pd='kgpa --no-headers | grep -vE "Running|Completed"'

alias tk="tmux kill-session -t \$(tmux ls |awk -F: '{print \$1}' | fzf)"

alias debug='kubectl run -it --rm curl-telnet-pod --image=alpine:latest -- sh -c "apk add --no-cache curl busybox-extras && sh"'
